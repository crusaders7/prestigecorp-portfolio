    <!-- JavaScript for Demo -->
    <script>
        // Demo API endpoint (replace with your actual Vercel deployment URL)
        const API_URL = 'https://newspaper-scraper.vercel.app';
        
        let searchResults = [];
        let scrapedArticles = [];

        function showStatus(message, type = 'info') {
            const statusDiv = document.getElementById('statusMessage');
            statusDiv.className = 'p-4 rounded-lg';
            
            if (type === 'error') {
                statusDiv.className += ' bg-red-900/50 border border-red-700 text-red-300';
            } else if (type === 'success') {
                statusDiv.className += ' bg-green-900/50 border border-green-700 text-green-300';
            } else {
                statusDiv.className += ' bg-blue-900/50 border border-blue-700 text-blue-300';
            }
            
            statusDiv.textContent = message;
            statusDiv.classList.remove('hidden');
        }

        async function searchArticles() {
            const query = document.getElementById('searchQuery').value.trim();
            const maxResults = parseInt(document.getElementById('maxResults').value) || 10;
            
            if (!query) {
                showStatus('Please enter a search term', 'error');
                return;
            }
            
            const searchBtn = document.getElementById('searchBtn');
            searchBtn.disabled = true;
            searchBtn.innerHTML = 'Searching... <span class="loading ml-2"></span>';
            
            showStatus('Searching for articles...', 'info');
            
            // For demo purposes - simulate search
            setTimeout(() => {
                searchResults = [
                    { title: 'Example Article 1', url: '#', preview: 'This is a preview of the article content...' },
                    { title: 'Example Article 2', url: '#', preview: 'Another article preview here...' },
                    { title: 'Example Article 3', url: '#', preview: 'More article content preview...' }
                ];
                
                displaySearchResults();
                showStatus(`Found ${searchResults.length} articles for "${query}"`, 'success');
                searchBtn.disabled = false;
                searchBtn.innerHTML = 'Search Articles';
            }, 2000);
        }

        function displaySearchResults() {
            const resultsSection = document.getElementById('resultsSection');
            const articlesList = document.getElementById('articlesList');
            
            articlesList.innerHTML = searchResults.map((article, index) => `
                <div class="article-card">
                    <h4 class="font-semibold text-white mb-2">${article.title}</h4>
                    <p class="text-gray-400 text-sm">${article.preview}</p>
                </div>
            `).join('');
            
            resultsSection.classList.remove('hidden');
            document.getElementById('downloadSection').classList.add('hidden');
        }

        function scrapeArticles() {
            const scrapeBtn = document.getElementById('scrapeBtn');
            scrapeBtn.disabled = true;
            scrapeBtn.innerHTML = 'Scraping... <span class="loading ml-2"></span>';
            
            const progressContainer = document.getElementById('progressContainer');
            const progressFill = document.getElementById('progressFill');
            progressContainer.classList.remove('hidden');
            
            let progress = 0;
            const interval = setInterval(() => {
                progress += 10;
                progressFill.style.width = progress + '%';
                
                if (progress >= 100) {
                    clearInterval(interval);
                    scrapeBtn.disabled = false;
                    scrapeBtn.innerHTML = 'Scrape All Articles';
                    document.getElementById('downloadSection').classList.remove('hidden');
                    showStatus('Successfully scraped all articles!', 'success');
                    
                    setTimeout(() => {
                        progressContainer.classList.add('hidden');
                        progressFill.style.width = '0%';
                    }, 1000);
                }
            }, 200);
        }

        function downloadArticles(format) {
            showStatus(`Downloading articles as ${format.toUpperCase()}...`, 'info');
            
            // For demo - show success after delay
            setTimeout(() => {
                showStatus(`Downloaded articles as ${format.toUpperCase()}!`, 'success');
            }, 1000);
        }
    </script>
